<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

	<changeSet id="organizations-0001" author="cursor">
		<createTable tableName="organizations">
			<column name="id" type="BIGSERIAL">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="name" type="VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="coordinates_x" type="INTEGER">
				<constraints nullable="false"/>
			</column>
			<column name="coordinates_y" type="DOUBLE PRECISION">
				<constraints nullable="false"/>
			</column>
			<column name="creation_date" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="annual_turnover" type="BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="full_name" type="VARCHAR(918)"/>
			<column name="employees_count" type="INTEGER"/>
			<column name="type" type="VARCHAR(64)">
				<constraints nullable="false"/>
			</column>
			<column name="address_street" type="VARCHAR(255)"/>
			<column name="location_x" type="REAL"/>
			<column name="location_y" type="DOUBLE PRECISION"/>
			<column name="location_z" type="BIGINT"/>
			<column name="location_name" type="VARCHAR(255)"/>
		</createTable>
	</changeSet>
</databaseChangeLog> 